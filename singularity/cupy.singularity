Bootstrap: docker

#https://github.com/pytorch/pytorch#docker-image
#From: docker://cupy/cupy:latest-python3
From: nvidia/cuda:10.1-cudnn7-devel-centos7

%post
    yum -y install https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm
    yum install -y cuda-toolkit-10-1
    yum install -y tbb
    yum install -y bzip2
    yum install -y boost
    yum install -y boost-devel
    yum install -y git
    yum install -y root root-tmva
    yum install -y cuda-nsight-10-1

    curl -k https://repo.anaconda.com/archive/Anaconda3-2019.10-Linux-x86_64.sh -o anaconda.sh
    bash anaconda.sh -b -u -p /usr/local/anaconda3
    PATH=/usr/local/anaconda3/bin:$PATH
    
    conda install -y tbb numba cudatoolkit jupyter
    conda install -y scipy
    conda install -y graphviz tqdm lz4 cloudpickle
    conda install -y tensorflow-gpu keras 

    pip install yappi
    pip install setGPU
    pip install cupy-cuda101
    pip install uproot yappi awkward setGPU nvidia_smi


%environment
    PATH=/usr/local/anaconda3/bin:$PATH
    LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH

%runscript
    /bin/bash 
