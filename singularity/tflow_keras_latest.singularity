Bootstrap: docker

#https://www.tensorflow.org/install/install_linux#configure_a_docker_container
From: docker://tensorflow/tensorflow:latest-gpu

#https://github.com/singularityware/singularity/issues/1616
%post
    chmod -R 755 /root
    pip install -U keras
    pip install -U uproot
    pip install -U jupyter

#can be empty
%environment
    JUPYTER_RUNTIME_DIR=$HOME/jupyter-runtime

%runscript
    /bin/bash 
